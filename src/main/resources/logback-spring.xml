<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="stdout-appender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
    </appender>

    <appender name="otel" class="io.opentelemetry.instrumentation.logback.mdc.v1_0.OpenTelemetryAppender">
        <appender-ref ref="stdout-appender" />
    </appender>

    <springProfile name="dev">
        <logger name="io.lettuce.core.protocol.ReconnectionHandler" level="warn"/>
        <logger name="no.nav.sikkerhetstjenesten" level="trace"/>
    </springProfile>

    <springProfile name="local | test">
        <appender name="stdout-appender" class="ch.qos.logback.core.ConsoleAppender">
            <layout class="ch.qos.logback.classic.PatternLayout">
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} %X{Nav-CallId} [%thread] %-5level %logger{70} - %msg%n</Pattern>
            </layout>
        </appender>
        <appender name="secure-appender" class="ch.qos.logback.core.ConsoleAppender">
            <layout class="ch.qos.logback.classic.PatternLayout">
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} %X{Nav-CallId} [%thread] %-5level %logger{70} - %msg%n</Pattern>
            </layout>
        </appender>
        <logger name="no.nav.sikkerhetstjenesten" level="trace"/>
    </springProfile>

    <springProfile name="prod">
        <turboFilter class="ch.qos.logback.classic.turbo.MarkerFilter">
            <Name>CONFIDENTIAL_FILTER</Name>
            <Marker>CONFIDENTIAL</Marker>
            <OnMatch>DENY</OnMatch>
        </turboFilter>
    </springProfile>

    <root level="info">
        <appender-ref ref="otel"/>
    </root>
</configuration>